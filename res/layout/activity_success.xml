<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >
        
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/u4" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textColor="@color/LightBlack"
            android:text="支付成功" />
        
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/FontGray"
        android:padding="1dip"
        android:orientation="vertical" >
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/White"
	        android:paddingLeft="10dp"
	        android:paddingTop="5dp"
	        android:paddingBottom="5dp"
	        android:paddingRight="10dp"
	        android:orientation="horizontal">
	        <TextView
	            android:id="@+id/successcattv"
	            android:layout_width="wrap_content"
	            android:layout_height="@dimen/paymethod_label_height"
	            android:gravity="center"
	            android:textSize="32sp"
	            android:textColor="@color/LightBlack"
	            android:layout_alignParentLeft="true"
	            android:text="餐饮" />
	        <TextView
	            android:id="@+id/successamounttv"
	            android:layout_width="wrap_content"
	            android:layout_height="@dimen/paymethod_label_height"
	            android:gravity="center"
	            android:textSize="30sp"
	            android:textColor="@color/Red"
	            android:layout_alignParentRight="true"
	            android:text="345.00元" />
	    </RelativeLayout>
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/White"
	        android:layout_marginTop="1dip"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:orientation="horizontal">
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="1dip"
		        android:orientation="vertical" >
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:padding="1dip"
			        android:orientation="horizontal">"
			        <TextView
			            android:id="@+id/textView13"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:gravity="center"
			            android:textSize="@dimen/success_list_text_size"
			            android:textColor="@color/FontGray"
			            android:layout_alignParentRight="true"
			            android:text="姓名：" />
			        <TextView
			            android:id="@+id/successnametv"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:gravity="center"
			            android:textSize="@dimen/success_list_text_size"
			            android:textColor="@color/FontGray"
			            android:layout_alignParentRight="true"
			            android:text="张三" />
			    </LinearLayout>
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:padding="1dip"
			        android:orientation="horizontal">
			        <TextView
			            android:id="@+id/successdatetv"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:gravity="center"
			            android:textSize="@dimen/success_list_text_size"
			            android:textColor="@color/FontGray"
			            android:text="2014/04/12  15:32" />
			    </LinearLayout>
			    
		    </LinearLayout>
	        <TextView
	            android:id="@+id/successpaymethodtv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:layout_centerHorizontal="true"
	            android:layout_centerInParent="true"
	            android:textSize="@dimen/success_tip_text_size"
	            android:textColor="@color/Yellow"
	            android:layout_alignParentRight="true"
	            android:background="@color/Gray"
	            android:padding="2dip"
	            android:text="GO币支付" />
	    </RelativeLayout>
    </LinearLayout>



    <Button
        android:id="@+id/backtohome"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_button_height"
		android:background="@color/Red"
		android:textColor="@color/White"
		android:textSize="@dimen/frame_button_size"
		android:layout_marginTop="60dp"
        android:text="返回首页" />
        
    </LinearLayout>

</LinearLayout>
